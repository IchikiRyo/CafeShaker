  <h1>Sign up</h1>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.text_field :username, placeholder: "User Name" %>
    </div>

    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email" %>
    </div>

    <div class="field">
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", placeholder: "Password" %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password Confirmation" %>
    </div>
    <div class="field">
      <div class="terms_and_policy">
        <%= link_to "利用規約", terms_index_path, { target: "blank" } %>と<%= link_to "プライバシーポリシー", policy_index_path, { target: "blank" } %>に同意する
      </div>
      <%= f.check_box :agreement, :as => :boolean, checked:false %>
    </div>

    <div class="field">
      <%= f.file_field :avatar %>
    </div>

    <div class="actions">
      <%= f.submit "登録", :class=>"button" %>
    </div>
  <% end %>
</div>
<div class="form-wrapper">
  <ul class="nav navbar-nav">
  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <li><%= link_to "パスワードを忘れた。", new_password_path(resource_name) %><li>
  <% end -%>
  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <li><%= link_to "認証メールを受け取れなかった。", new_confirmation_path(resource_name) %><li>
  <% end -%>
  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <li><%= link_to "パスワードリセットのメールを受け取れなかった。", new_unlock_path(resource_name) %></li>
  <% end -%>
    <li><%= link_to " Facebookログイン", user_facebook_omniauth_authorize_path, :class => 'navbar-link fa fa-facebook' %></li>
    <li><%= link_to " Twitterログイン", user_twitter_omniauth_authorize_path, :class => 'navbar-link fa fa-twitter' %></li>
    <li><%= link_to " Instagramログイン", user_instagram_omniauth_authorize_path, :class => 'navbar-link fa fa-instagram' %></li>
    <%- if controller_name != 'sessions' %>
    <li><%= link_to "ログイン", new_session_path(resource_name) %><li>
  <% end -%>
  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <li><%= link_to "サインアップ", new_registration_path(resource_name) %><li>
  <% end -%>
    <li><a href="terms/index">利用規約</a></li>
    <li><%= link_to "お問い合わせ", inquiry_path, :class => 'navbar-link' %></li>
  </ul>
</div>