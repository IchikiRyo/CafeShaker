<div class="containerInquiry">
  <%= form_for @inquiry, :url => inquiry_confirm_path do |f| %>
    <h1>問い合わせ画面</h1>
    <% if @inquiry.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <strong>入力内容にエラーがあります</strong>
      <ul>
        <% @inquiry.errors.each do |attr, msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
    <% end %>

    <table class="table">
      <tr>
        <th>名前<span class="text-danger"> （必須)</span></th>
        <td class="inquiry"><%= f.text_field :name, :size=>'40px' %></td>
      </tr>

      <tr>
        <th>メールアドレス<span class="text-danger"> (必須)</span></th>
        <td class="inquiry"><%= f.text_field :email, :size=>'40px' %></td>
      </tr>

      <tr>
        <th>電話番号</th>
        <td class="inquiry"><%= f.telephone_field :phone, :size=>'40px' %></td>
      </tr>

      <tr>
        <th>問い合わせ内容 <span class="text-danger"> (必須)</span></th>
        <td class="inquiryMessage"><%= f.text_area :message, :cols=>'40px', :rows=>"7px" %></td>
      </tr>

    </table>
    <%= f.submit '確認', class: 'btn btn-inquiry' %>
  <% end %>
</div>