<div class="Main">
  <div class="reviewNew">
    <div class="contents row">
      <div class="jumbotron">
        <h1 class="show-place-h1"><%= @place.name %></h1>
      </div>
      <br>
      <img src="<%= @place.photos %>" class="cafePhoto">
      <%= form_for [@place, @review], html: { multiple: true} do |f| %>
        <div class="evaluation">
          <%= f.radio_button 'rank', 5 %>
          <label for="review_rank_5"><span class="text">最高</span>★</label>
          <%= f.radio_button 'rank', 4 %>
          <label for="review_rank_4"><span class="text">良い</span>★</label>
          <%= f.radio_button 'rank', 3 %>
          <label for="review_rank_3"><span class="text">普通</span>★</label>
          <%= f.radio_button 'rank', 2 %>
          <label for="review_rank_2"><span class="text">悪い</span>★</label>
          <%= f.radio_button 'rank', 1 %>
          <label for="review_rank_1"><span class="text">最低</span>★</label>
        </div>
        <%= f.text_area :review, placeholder: 'レビューを書く', style: 'width: 100%;height: 200px;' %>
        <div class="fieldPicuture">
          <p>カフェの写真を選択</p>
          <div class="btn btn-default"><%= f.file_field :photos, accept: 'image/jpg,image/jpeg,image/png,image/gif,image/JPG,image/JPEG,image/PNG,image/GIF' %></div>
        </div>
        <%= f.submit "投稿する", class: "btn btn-review" %>
      <% end %>
    </div>

    <%= render "reviews" %>

  <button type="button" class="btn pull-right btn-lg btn-default">
    <%= link_to 'Back', root_path, data:{"turbolinks"=>false} %>
  </button>
</div>