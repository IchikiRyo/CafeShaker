<h2>検索したお店はこちら！</h2>
<div class="col-md-12">
  <table class="table table-striped table-hover">
    <% @places.each do |place| %>
      <tr>
        <th>店名</th>
        <td><%= place.name %>
          <%= link_to( '登録', places_path( :place => { 
            :name => place.name,
            :latitude => place.lat,
            :longitude => place.lng,
            :address => place.formatted_address,
            :photos => place.photos[0].fetch_url(800),
             } ),:method => 'post', :class=>'btn btn-default' ) %>
          <%= link_to "投稿", { :controller => "reviews", :action => "new" }, { :class => "btn btn-default"} %>
        </td>
      </tr>
      <tr>
        <th>住所</th>
        <td><%= place.formatted_address %></td>
      </tr>
      <tr>
        <th>写真</th>
        <% if place.photos[0] %>
            <td><img src="<%= place.photos[0].fetch_url(800) %>" class="cafePhoto" ></td>
          <% else %>
            <td><img src="" width="300"></td>
          <% end %>
      </tr>
      <tr>
        <th></th>
        <td></td>
      </tr>
    <% end %>
  </table>

  <button type="button" class="btn pull-right btn-lg btn-default">
    <%= link_to 'Back', places_path %>
  </button>
</div>