<div class="container">
  <div class="col-md-6">
  <h2 style="color: #fff;text-align: center;">お目当のカフェがなかったら<br>ここから検索してみよう</h2>
  <%= form_tag places_list_path, :role => "form", :method => :get do %>
    <%= text_field_tag :search, params[:search], { :class => "form-control", :required => true, :placeholder=>"お目当のカフェが出てこなかったらここで検索してみよう"} %>
    <%= button_tag( {:type => "submit", :name => nil, :class => "btn btn-default search" } ) do %>
      <span class="glyphicon glyphicon-search">検索</span>
    <% end %>
  <% end %>
  </div>
  <div class="col-md-12">
    <div class="jumbotron">
      <h1>検索結果</h1>
    </div>
  <table class="table">
    <% @places.each do |place| %>
      <tr>
        <td class="topLeft"><h4><%= place.name %></h4></td>
        <td rowspan="2"><%= link_to ( place ), :title => "show" do %> <span class="glyphicon glyphicon-stats placeIndexBtn" aria-hidden="true">詳細</span><% end %></td>
        <!-- <td rowspan="2"><%= link_to( place, method: :delete, data: { confirm: "#{place.name} を削除します" }, :title => "delete" ) do %><span class="glyphicon glyphicon-trash placeIndexBtn"></span><% end %></td> -->
        <td class="topRight" rowspan="2"><a href="/places/<%= place.id %>/reviews/new" class="btn btn-default placeIndexBtn" >投稿する</a></td>
      </tr>
      <tr>
        <td>
          <% if place.reviews.present? %>
          <div class="star-rating">
            <span class="rate rate<%= place.review_average %>"></span>
          <% else %>
            <span class="rate rate0"></span>
          <% end %>
          </div>
        </td>
      </tr>
      <tr>
        <td colspan="4" class="boxBottom"><img src="<%= place.photos %>" class="cafePhoto"></td>
      </tr>
      <tr>
        <td colspan="4" class="block"></td>
      </tr>
    <% end %>
  </table>
</div>
</div>