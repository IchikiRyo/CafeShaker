  <div class="showReview">
    <h2>みんなの投稿</h2>
    <ul>
      <% @place.reviews.each do |review| %>
      <li>
        <h3 title="<%= review.user.username %>">
          <span><i class="icon-rate-60" title=""></i></span><%= review.user.username %>
        </h3>
        <div class="good-<%= review.id %>"><%= render "likes/like", review: review %></div>
        <div class="star-rating">
          <span class="rate rate<%= review.rank %>"></span>
        </div>
        <p class="review">
          <%= simple_format(review.review) %>
        </p>
        <% unless review.photos.blank? %>
          <img src="review.photos" class="img-responsive">
        <% end %>
      </li>
      <br>
      <% end %>
    </ul>
  </div>
  <%= link_to 'Back', root_path, :class=>"btn pull-right btn-lg btn-default" %>
</div>
