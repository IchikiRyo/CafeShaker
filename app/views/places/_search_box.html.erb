<%= form_tag search_places_path, :role => "form", :method => :get do %>
  <%= text_field_tag :keyword, params[:keyword], { :class => "form-control", :required => true, :placeholder=>"Cafe Sharesのカフェを探す"} %>
  <%= button_tag( {:type => "submit", :name => nil, :class => "btn btn-default search" } ) do %>
    <i class="fa fa-search">検索</i>
  <% end %>
<% end %>
<%= form_tag places_list_path, :role => "form", :method => :get do %>
  <%= text_field_tag :search, params[:search], { :class => "form-control", :required => true, :placeholder=>"未登録のカフェを探す"} %>
  <%= button_tag( {:type => "submit", :name => nil, :class => "btn btn-default search" } ) do %>
    <i class="fa fa-search">検索</i>
  <% end %>
<% end %>