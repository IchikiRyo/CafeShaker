<div class="Main">
  <h1>問い合わせ確認画面</h1>

  <%= form_for @inquiry, :url => inquiry_thanks_path do |f| %>
  <div class="form-wrapper">
      <table class="inquiry-new">
        <tr>
          <th>名前</th>
          <td>
            <div class="field">
              <%= f.hidden_field :name %>
              <%= @inquiry.name %>
            </div>
          </td>
        </tr>

        <tr>
          <th>メールアドレス</th>
          <td>
            <div class="field">
              <%= f.hidden_field :email %>
              <%= @inquiry.email %>
            </div>
          </td>
        </tr>

        <tr>
          <th>電話番号</th>
          <td>
            <div class="field">
              <%= f.hidden_field :phone %>
              <%= @inquiry.phone %>
            </div>
          </td>
        </tr>

        <tr>
          <th>問い合わせ内容</th>
          <td>
            <div class="field">
              <%= f.hidden_field :message %>
              <%= simple_format(@inquiry.message) %>
            </div>
          </td>
        </tr>
      </table>
    </div>
    <%= f.submit '送信', :class => 'btn btn-inquiry' %>
  <% end %>
</div>