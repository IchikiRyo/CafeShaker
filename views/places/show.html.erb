<% content_for(:html_title) { @place.name + ' | Cafe Shares' } %>
<div class="col-md-６">
  <!-- Main jumbotron -->
  <div class="jumbotron">
    <h1 class="show-place-h1"><%= @place.name %></h1>
  </div><!-- /.jumbotron -->

  <div class="Cafe">
    <div class="table tableShow">
      <div class="showAddress"><%= @place.address %></div>
      <div class="star-rating">
      <% if @place.reviews.present? %>
        <span class="rate rate<%= @place.review_average %>"></span>
      <% else %>
        <span class="rate rate0"></span>
      <% end %>
      </div>
      <%= link_to "投稿する", new_place_review_path(@place.id), data:{"turbolinks"=>false}, :class=>"btn btn-default placeIndexBtn" %>
      <div><img src="<%= @place.photos %>" class="cafePhoto img-responsive"></div>
      <% place = @place %>
      <div id="heart-<%= place.id %>" class="show-place-heart">
        <%= render "like_places/like_place", place: place %>
      </div>
    </div>
  </div>
  <div class="map_container">
    <div id="map" class="map_canvas"></div>
     <script type="text/javascript">
        handler = Gmaps.build('Google');
        handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
          markers = handler.addMarkers(<%= raw @hash.to_json %>);
          handler.bounds.extendWith(markers);
          handler.fitMapToBounds();
          handler.getMap().setZoom(12);
          handler.map.centerOn(markers);
        });
      </script>
  </div>
  <div class="review_anything">
    <div class="review_menu some_review">
      <p>メニュー</p>
      <% if @place.reviews.present? %>
        <span class="rate rate<%= @place.review_average_menu %>"></span>
        <% if @place.review_average_menu == 5 %>
          <p>豊富</p>
        <% elsif @place.review_average_menu == 4 %>
          <p>まあまあ多い</p>
        <% elsif @place.review_average_menu == 3 %>
          <p>普通</p>
        <% elsif @place.review_average_menu == 2 %>
          <p>ちょっと少ない</p>
        <% elsif @place.review_average_menu == 1 %>
          <p>少ない</p>
        <% end %>
      <% else %>
        <span class="rate rate0"></span>
        <p>投稿なし</p>
      <% end %>
    </div>
    <div class="review_cost some_review">
